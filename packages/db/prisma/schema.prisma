generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Platform {
  NETFLIX
  AMAZON_PRIME
  HOTSTAR
}

enum Genre {
  ACTION
  ADVENTURE
  COMEDY
  DRAMA
  HORROR
  ROMANCE
  SCI_FI
  THRILLER
  FANTASY
}

model Movie{
  id          Int      @id @default(autoincrement())
  title       String  
  platform    Platform[]
  genre       Genre[]
  thumbnail   String 
  key        String   @unique
  @@map("movies")
}
